---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
import floor from "../assets/floor.png";
import Header from "./Header.astro";
---

<div id="screen1">
	<Header />
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<main></main>
	<footer id="floor"></footer>
</div>

<style>
	#screen1 {
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: flex-start;
		height: 100vh;
		margin: 0;
		background: linear-gradient(
			to bottom,
			#2a6fdb,
			#87cefa
		); /* Azul mais escuro â†’ azul claro */
	}

	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	#floor {
		width: 100%;
		height: 90px;
		background-image: url("../assets/floor.png");
		background-repeat: repeat-x;
		background-position: 0 0;
		background-size: 100% 100%; /* ou cover / contain dependendo do efeito */
		animation: mover-fundo 30s linear infinite;
	}

	@keyframes mover-fundo {
		0% {
			background-position: 0 0;
		}
		100% {
			background-position: -1000px 0;
		}
	}
</style>
